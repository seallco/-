name: Deploy to GitHub Pages

on:
  push:
    branches: [ main ]  # 或你的主要分支

jobs:
  build:
    runs-on: ubuntu-latest

    steps:
      - name: Checkout
        uses: actions/checkout@v3

      - name: Setup Node.js
        uses: actions/setup-node@v3
        with:
          node-version: '18'  # 根據你的專案需求

      - name: Install dependencies
        run: npm install

      - name: Build project
        run: npm run build  # 你的 build 指令，通常會產生 dist 或 build 資料夾

      - name: Upload artifact
        uses: actions/upload-pages-artifact@v1
        with:
          path: ./dist  # 或 ./build，取決於你的專案輸出資料夾

  deploy:
    runs-on: ubuntu-latest
    needs: build
    permissions:
      pages: write
      id-token: write

    steps:
      - name: Deploy to GitHub Pages
        uses: actions/deploy-pages@v1
